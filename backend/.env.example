# Backend Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crowdk_wallet
DB_USER=postgres
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d

# Tether WDK Configuration
# EVM Networks (Ethereum, BSC, Polygon, etc.)
WDK_EVM_NETWORK=ethereum-mainnet
WDK_EVM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
WDK_EVM_API_KEY=your_alchemy_or_infura_key

# TON Network
WDK_TON_NETWORK=mainnet
WDK_TON_RPC_URL=https://toncenter.com/api/v2/jsonRPC
WDK_TON_API_KEY=your_toncenter_api_key

# TRON Network
WDK_TRON_NETWORK=mainnet
WDK_TRON_RPC_URL=https://api.trongrid.io
WDK_TRON_API_KEY=your_trongrid_api_key

# Gas Fee Sponsor (for gasless transactions)
WDK_GAS_SPONSOR_PRIVATE_KEY=your_sponsor_wallet_private_key

# CORS Configuration
CORS_ORIGIN=http://localhost:4028

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Price API Configuration
COINGECKO_API_KEY=your_coingecko_api_key
PRICE_UPDATE_INTERVAL=60000

# WebSocket Configuration
WS_PORT=3001

# Logging
LOG_LEVEL=debug
